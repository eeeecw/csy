.container {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(109, 109, 109, 0.329);
}
.edit {
  position: absolute;
  top: 85px;
  left: 25rpx;
  width: 700rpx;
  background-color: #fff;
}
.edit-title {
  display: flex;
  padding: 8px;
}
.edit-title label {
  margin-right: 8px;
}
.edit-body {
  height: 333px;
}
.edit-body-add {
  margin-left: 20px;
  color: #2d8cf0;
}
.edit-body-input {
  padding: 2px 10px;
  flex: 1;
}
.edit-body-item {
  display: flex;
}
.edit-body-item-close {
  width: 14px;
  margin-right: 12px;
}
.edit-footer {
  display: flex;
  line-height: 22px;
  text-align: center;
  padding-bottom: 6px;
}
.edit-footer-save {
  color: #2d8cf0;
  flex: 1;
}
.edit-footer-cancel {
  color: #ed4014;
  flex: 1;
}
.toast {
  position: fixed;
  top: 50%;
  left: 50%;
  display: none;
}
.toast-body {
  margin-left: -50%;
  margin-right: 50%;
  margin-top: -50%;
  padding: 3px 9px;
  background-color: rgba(0, 0, 0, 0.75);
  border-radius: 5px;
  color: #fff;
}
.toast-show {
  display: inline;
}

